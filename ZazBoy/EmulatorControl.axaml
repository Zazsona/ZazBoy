<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             Background="#141414"
             x:Class="ZazBoy.EmulatorControl"
             Margin="0"
             Focusable="True">
  <DockPanel>
    <StackPanel Name="ButtonStack" DockPanel.Dock="Bottom" MinWidth="160" MinHeight="5" MaxHeight="50" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Spacing="15">
      <Image Name="ResumeButton" MinWidth="5" MinHeight="1"></Image>
      <Image Name="StopButton" MinWidth="5" MinHeight="1"></Image>
      <Image Name="DebugButton" MinWidth="5" MinHeight="1"></Image>
    </StackPanel>
    <Image Name="LCD" DockPanel.Dock="Top" MinWidth="160" MinHeight="144"></Image>
  </DockPanel>
</UserControl>
