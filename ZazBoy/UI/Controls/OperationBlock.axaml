<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="50"
             x:Class="ZazBoy.UI.Controls.OperationBlock"
             Name="OperationBlock"
             Background="Transparent"
             MinHeight="50">
  
  <Border Name="OperationBorder" BorderBrush="LightGray" BorderThickness="1">
    <Grid RowDefinitions="Auto,Auto" VerticalAlignment="Center">
      <TextBlock Name="MnemonicTag" Grid.Row="0" HorizontalAlignment="Center">---</TextBlock>
      <TextBlock Name="PositionTag" Grid.Row="1" HorizontalAlignment="Center" FontSize="10">---</TextBlock>
    </Grid>
  </Border>
</UserControl>
